<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383A3A"
    android:orientation="vertical"
    tools:context="com.Application.View.Customer.CustomerCartView">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="345dp">

        <TextView
            android:id="@+id/ItemHeading"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="15dp"
            android:text="Items"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/QuantityHeading"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Total Quantity"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/RodQuantity"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/rodLabel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/StickQuantity"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/stickLabel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/SkatesQuantity"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/skatesLabel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShoesQuantity"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/shoesLabel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/BarQuantity"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/barLabel"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20dp" />


    </GridLayout>

    <TextView
        android:id="@+id/totalPriceLabel"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:text="   Total: "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalPriceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:text="$0.00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/checkOutBtn"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:background="#2196F3"
        android:text="Check Out"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/saveCartBtn"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:background="#4CAF50"
        android:text="Save Cart"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</LinearLayout>
