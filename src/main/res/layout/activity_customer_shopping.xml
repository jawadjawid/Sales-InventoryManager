<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:orientation="vertical"
    tools:context="com.Application.View.Customer.CustomerShoppingView">

    <TextView
        android:id="@+id/ItemsHeading"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="Items"
        android:textColor="@color/colorLight"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/QuantityHeading"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/current_quantity_heading"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_heading_size" />

    <TextView
        android:id="@+id/OptionHeading"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/option_heading"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_heading_size" />

    <TextView
        android:id="@+id/RodLabel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Fishing Rod ($12.00)"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_item_label_size" />

    <TextView
        android:id="@+id/RodCurrentQuantity"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:text="@string/initial_quantity"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="19dp" />

    <Button
        android:id="@+id/RodAddBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/add"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/RodRemoveBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/remove"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/RodQuantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorLightBlue"
        android:hint="@string/enter_quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textColorHint="@color/colorDark"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/StickLabel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Hockey Stick ($8.50)"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_item_label_size" />

    <TextView
        android:id="@+id/StickCurrentQuantity"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:text="@string/initial_quantity"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="19dp" />

    <Button
        android:id="@+id/StickAddBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/add"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/StickRemoveBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/remove"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/StickQuantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorLightBlue"
        android:hint="@string/enter_quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textColorHint="@color/colorDark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/SkatesLabel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Skates ($10.00)"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_item_label_size" />

    <TextView
        android:id="@+id/SkatesCurrentQuantity"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:text="@string/initial_quantity"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="19dp" />

    <Button
        android:id="@+id/SkatesAddBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/add"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/SkatesRemoveBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/remove"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/SkatesQuantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorLightBlue"
        android:hint="@string/enter_quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textColorHint="@color/colorDark"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/ShoesLabel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Running Shoes ($15.00)"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_item_label_size" />

    <TextView
        android:id="@+id/ShoesCurrentQuantity"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:text="@string/initial_quantity"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="19dp" />

    <Button
        android:id="@+id/ShoesAddBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/add"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ShoesRemoveBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ShoesQuantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorLightBlue"
        android:hint="Quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textColorHint="@color/colorDark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/BarLabel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Protein Bar ($3.00)"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/shopping_item_label_size" />

    <TextView
        android:id="@+id/BarCurrentQuantity"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:text="@string/initial_quantity"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="19dp" />

    <Button
        android:id="@+id/BarAddBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/add"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/BarRemoveBtn"
        android:layout_width="@dimen/option_button_width"
        android:layout_height="@dimen/option_button_height"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorLightBlue"
        android:text="@string/remove"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/BarQuantity"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorLightBlue"
        android:hint="@string/enter_quantity"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textColorHint="@color/colorDark"
        android:textSize="15dp" />


    <Button
        android:id="@+id/ResetAllBtn"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/shopping_main_buttons_margin_top"
        android:background="@color/colorLightBlue"
        android:text="@string/reset_all"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/shopping_item_label_size" />


    <Button
        android:id="@+id/GoHomeBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/shopping_main_buttons_margin_top"
        android:layout_marginEnd="5dp"
        android:background="@color/colorLightBlue"
        android:text="@string/go_back_home"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/shopping_item_label_size" />
</GridLayout>
