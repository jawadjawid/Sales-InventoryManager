<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383A3A"
    tools:context="com.Application.View.MainActivity">

    <Button
        android:id="@+id/newEmployee"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="228dp"
        android:backgroundTint="#BCBEBE"
        android:text="Make New Employee" />

    <Button
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="448dp"
        android:backgroundTint="#BCBEBE"
        android:text="Make New User" />

    <Button
        android:id="@+id/newAccount"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="377dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="332dp"
        android:backgroundTint="#BCBEBE"
        android:text="Make New Account" />

    <Button
        android:id="@+id/authenticate"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="536dp"
        android:backgroundTint="#BCBEBE"
        android:text="Authenticate New Employee" />

    <Button
        android:id="@+id/restockInventory"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="102dp"
        android:backgroundTint="#BCBEBE"
        android:text="Restock Inventory" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="674dp"
        android:background="#00F1EDED"
        android:backgroundTint="#F2F4F7"
        android:text="HOME"
        android:textAlignment="center"
        android:textColor="#EDF1ED"
        android:textSize="25sp" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="715dp"
        android:text="LogOut" />

</RelativeLayout>