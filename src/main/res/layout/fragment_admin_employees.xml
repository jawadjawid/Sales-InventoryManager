<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorDark"
  android:orientation="vertical">

  <TextView
    android:id="@+id/selectEmployeeIdTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Employee Id to Promote:"
    android:textColor="@color/colorLight" />

  <TextView
    android:id="@+id/text_make_new_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <NumberPicker
    android:id="@+id/employeeIdNumberPicker"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:theme="@style/AppTheme.NumberPicker" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <Button
      android:id="@+id/selectEmployeeIdButton"
      android:layout_width="@dimen/user_info_field_width"
      android:layout_height="@dimen/button_height_standard"
      android:layout_gravity="center"
      android:layout_marginTop="-100dp"
      android:layout_marginBottom="20dp"
      android:background="@color/colorLightBlue"
      android:text="Promote Employee"
      android:textColor="@color/colorDark"
      android:visibility="visible" />
  </LinearLayout>

</LinearLayout>