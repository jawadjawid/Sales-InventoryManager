<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:orientation="vertical"
    tools:context="com.Application.View.MainLoginView">

    <TextView
        android:id="@+id/createNewUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/text_size_large"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/userIconImageView"
        android:layout_width="115dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/user"
        android:layout_gravity="center"/>

    <include layout="@layout/content_user_login_fields"></include>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="@dimen/user_info_field_width"
        android:layout_height="40dp"
        android:background="@color/colorLightBlue"
        android:text="@string/login"
        android:textColor="@color/colorDark"
        android:visibility="visible"
        android:layout_gravity="center"/>








</LinearLayout>
