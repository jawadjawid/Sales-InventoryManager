<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorDark"
  android:orientation="vertical">

  <TextView
    android:id="@+id/selectCustomerIdTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="230dp"
    android:text="Select Customer Id to give money to:"
    android:textColor="@color/colorLight" />

  <NumberPicker
    android:id="@+id/customerIdNumberPicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:theme="@style/AppTheme.NumberPicker" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:gravity="bottom"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/enterCreditAmountTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:text="Enter Credit Amount: "
      android:textColor="@color/colorLightBlue"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <EditText
      android:id="@+id/creditAmountEditText"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:background="@color/colorDark"
      android:textColor="@color/colorLightBlue"
      android:visibility="visible" />

    <Button
      android:id="@+id/sendCreditButton"
      android:layout_width="70dp"
      android:layout_height="25dp"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="2dp"
      android:background="@color/colorLightBlue"
      android:text="Send"
      android:textColor="@color/colorDark"
      android:visibility="visible" />
  </LinearLayout>

</LinearLayout>