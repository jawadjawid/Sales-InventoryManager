<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383A3A"
    android:orientation="vertical">

    <TextView
        android:id="@+id/createNewUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:text="Authenticate New Employee"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/text_size_medium"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/userIconImageView"
        android:layout_width="115dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/user"
        android:layout_gravity="center"/>

    <include layout="@layout/content_user_login_fields"></include>

    <Button
        android:id="@+id/authenticateNewEmployeeButton"
        android:layout_width="@dimen/user_info_field_width"
        android:layout_height="@dimen/button_height_standard"
        android:background="@color/colorLight"
        android:text="Authenticate"
        android:textColor="@color/colorGrey"
        android:visibility="visible"
        android:layout_gravity="center"/>
</LinearLayout>
